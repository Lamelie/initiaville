{% extends 'base.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}

    <main class="container">
        <h2>Il y a {{ city.projects|length }} projet(s) pour la ville de {{ city.name }}</h2>

        <section class="row recipes">
            {% for project in city.projects %}

                <div class="col-md-4">
                    {% include 'project/_card.html.twig' with {'project': project} only  %}
                </div>
            {% endfor %}

        </section>
    </main>

{% endblock %}
